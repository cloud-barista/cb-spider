#!/bin/bash

source ../header.sh




source ./setup.env

export CONN_CONFIG=aws-ohio-config

echo -e "\n============ STEP-2: CREATE/LIST/DELETE VPC (AWS:OHIO)"

echo "============== create VPC/Subnet: '${VPC_NAME}'"
time $CLIPATH/spctl --config $CLIPATH/grpc_conf.yaml vpc create -i json -d \
    '{
      "ConnectionName":"'${CONN_CONFIG}'",
      "ReqInfo": {
        "Name": "'${VPC_NAME}'",
        "IPv4_CIDR": "'${VPC_CIDR}'",
        "SubnetInfoList": [
          {
            "Name": "'${SUBNET_NAME}'",
            "IPv4_CIDR": "'${SUBNET_CIDR}'"
          }
        ]
      }
    }' 2> /dev/null



echo "============== get VPC/Subnet: '${VPC_NAME}'"
time $CLIPATH/spctl --config $CLIPATH/grpc_conf.yaml vpc get --cname "${CONN_CONFIG}" -n "${VPC_NAME}" 2> /dev/null


echo "============== delete VPC/Subnet: '${VPC_NAME}'"
time $CLIPATH/spctl --config $CLIPATH/grpc_conf.yaml vpc delete --cname "${CONN_CONFIG}" -n "${VPC_NAME}" --force false 2> /dev/null




source ../header.sh
